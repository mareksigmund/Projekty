@{
    ViewData["Title"] = "Panel Administratora";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold">⚙️ Panel Administratora</h2>
    <p class="text-center text-muted">Zalogowany jako: <strong class="text-primary">@ViewBag.UserName</strong></p>
    <p class="text-center text-muted">Rola: <strong class="text-success">@ViewBag.UserRole</strong></p>

    <div class="row mt-4 g-3">
        <!-- Użytkownicy -->
        <div class="col-md-3">
            <a asp-action="ManageUsers" class="text-decoration-none">
                <div class="card admin-card bg-info text-white">
                    <div class="card-body">
                        <i class="bi bi-people display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Użytkownicy</h5>
                        <p class="card-text text-light">Przeglądaj i edytuj konta.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Nowy Użytkownik -->
        <div class="col-md-3">
            <a asp-action="CreateUser" class="text-decoration-none">
                <div class="card admin-card bg-success text-white">
                    <div class="card-body">
                        <i class="bi bi-person-plus display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Nowy Użytkownik</h5>
                        <p class="card-text text-light">Dodaj konto z rolą.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Statystyki -->
        <div class="col-md-3">
            <a asp-action="SystemStats" class="text-decoration-none">
                <div class="card admin-card bg-warning text-dark">
                    <div class="card-body">
                        <i class="bi bi-bar-chart-line display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Statystyki</h5>
                        <p class="card-text">Podgląd danych.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Zarządzanie zapisami -->
        <div class="col-md-3">
            <a asp-controller="Participation" asp-action="ManageParticipations" class="text-decoration-none">
                <div class="card admin-card bg-primary text-white">
                    <div class="card-body">
                        <i class="bi bi-person-check display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Zarządzanie zapisami</h5>
                        <p class="card-text text-light">Kontroluj zgłoszenia.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Powrót -->
        <div class="col-md-12 text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-house"></i> Powrót na stronę główną
            </a>
        </div>
    </div>
</div>

<style>
    .admin-card {
        width: 100%;
        height: 200px; /* Równe kafelki */
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .admin-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }

    .card-title {
        font-size: 1.3rem;
    }

    .card-text {
        font-size: 1rem;
    }

    h2 {
        margin-bottom: 10px;
    }

    .text-muted {
        opacity: 0.9;
    }

    .btn-lg {
        margin-top: 20px;
        padding: 10px 30px;
    }
</style>
