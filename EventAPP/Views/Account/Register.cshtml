@model EventApp.Models.User

<div class="card shadow-lg p-4 mb-5 bg-white rounded">
    <h2 class="text-center text-primary fw-bold">
        <i class="bi bi-person-plus"></i> Rejestracja
    </h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Register" method="post" class="mt-3">
        <div class="mb-3">
            <label for="Name" class="form-label"><i class="bi bi-person"></i> Imię i nazwisko</label>
            <input type="text" name="name" class="form-control" placeholder="Wpisz imię i nazwisko" required />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
            <input type="email" name="email" class="form-control" placeholder="Wpisz email" required />
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label"><i class="bi bi-lock"></i> Hasło</label>
            <input type="password" name="password" class="form-control" placeholder="Wpisz hasło" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle"></i> Zarejestruj
            </button>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-muted">
                <i class="bi bi-box-arrow-in-right"></i> Masz już konto? Zaloguj się
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
