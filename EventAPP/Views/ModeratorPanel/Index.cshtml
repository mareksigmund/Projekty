@{
    ViewData["Title"] = "Panel Moderatora";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold">🛡️ Panel Moderatora</h2>
    <p class="text-center text-muted">Zalogowany jako: <strong class="text-primary">@ViewBag.UserName</strong></p>
    <p class="text-center text-muted">Rola: <strong class="text-success">Moderator</strong></p>

    <div class="row mt-4 g-3">
        <!-- Lista Wydarzeń -->
        <div class="col-md-3">
            <a asp-controller="Event" asp-action="Index" class="text-decoration-none">
                <div class="card admin-card bg-info text-white">
                    <div class="card-body">
                        <i class="bi bi-calendar-check display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Lista Wydarzeń</h5>
                        <p class="card-text text-light">Przeglądaj wszystkie wydarzenia.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Edycja Wydarzeń -->
        <div class="col-md-3">
            <a asp-controller="Event" asp-action="Manage" class="text-decoration-none">
                <div class="card admin-card bg-warning text-dark">
                    <div class="card-body">
                        <i class="bi bi-pencil-square display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Edycja Wydarzeń</h5>
                        <p class="card-text">Modyfikuj i zarządzaj wydarzeniami.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Zgłoszenia (Wkrótce) -->
        <div class="col-md-3">
            <div class="card admin-card bg-secondary text-white opacity-75">
                <div class="card-body">
                    <i class="bi bi-flag display-3"></i>
                    <h5 class="card-title mt-3 fw-bold">Zgłoszenia (Wkrótce)</h5>
                    <p class="card-text text-light">Zarządzaj zgłoszeniami uczestników.</p>
                </div>
            </div>
        </div>

        <!-- Moderowanie (Wkrótce) -->
        <div class="col-md-3">
            <div class="card admin-card bg-secondary text-white opacity-75">
                <div class="card-body">
                    <i class="bi bi-exclamation-circle display-3"></i>
                    <h5 class="card-title mt-3 fw-bold">Moderowanie (Wkrótce)</h5>
                    <p class="card-text text-light">System moderowania wydarzeń.</p>
                </div>
            </div>
        </div>

        <!-- Powrót do Strony Głównej -->
        <div class="col-md-12 text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-house"></i> Powrót na stronę główną
            </a>
        </div>
    </div>
</div>

<style>
    .admin-card {
        width: 100%;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .admin-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }

    .card-title {
        font-size: 1.3rem;
    }

    .card-text {
        font-size: 1rem;
    }

    h2 {
        margin-bottom: 10px;
    }

    .text-muted {
        opacity: 0.9;
    }

    .btn-lg {
        margin-top: 20px;
        padding: 10px 30px;
    }

    .opacity-75 {
        opacity: 0.75;
        cursor: not-allowed;
    }
</style>
