@{
    ViewData["Title"] = "Panel Organizatora";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold text-primary">
        <i class="bi bi-calendar-event"></i> Panel Organizatora
    </h2>

    <p class="text-center text-muted">Zalogowany jako: <strong class="text-primary">@ViewBag.UserName</strong></p>
    <p class="text-center text-muted">Rola: <strong class="text-success">@ViewBag.UserRole</strong></p>

    <div class="row mt-4 g-3">
        <!-- Tworzenie wydarzenia -->
        <div class="col-md-4">
            <a asp-controller="Event" asp-action="Create" class="text-decoration-none">
                <div class="card organizer-card bg-success text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-plus display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Stwórz Wydarzenie</h5>
                        <p class="card-text text-light">Dodaj nowe wydarzenie.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Zarządzanie wydarzeniami -->
        <div class="col-md-4">
            <a asp-controller="Event" asp-action="MyEvents" class="text-decoration-none">
                <div class="card organizer-card bg-info text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-list-check display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Moje Wydarzenia</h5>
                        <p class="card-text text-light">Przeglądaj i zarządzaj swoimi wydarzeniami.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Lista uczestników -->
        <div class="col-md-4">
            <a asp-controller="Participation" asp-action="MyParticipants" class="text-decoration-none">
                <div class="card organizer-card bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Lista Uczestników</h5>
                        <p class="card-text text-light">Sprawdź zapisanych uczestników.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Raporty i statystyki -->
        <div class="col-md-4">
            <a asp-controller="Reports" asp-action="MyReports" class="text-decoration-none">
                <div class="card organizer-card bg-warning text-dark">
                    <div class="card-body text-center">
                        <i class="bi bi-bar-chart-line display-3"></i>
                        <h5 class="card-title mt-3 fw-bold">Raporty i Statystyki</h5>
                        <p class="card-text">Analiza wyników wydarzeń.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Powrót do strony głównej -->
        <div class="col-md-12 text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-house"></i> Powrót na stronę główną
            </a>
        </div>
    </div>
</div>

<style>
    .organizer-card {
        width: 100%;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .organizer-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }

    .card-title {
        font-size: 1.3rem;
    }

    .card-text {
        font-size: 1rem;
    }

    h2 {
        margin-bottom: 10px;
    }

    .text-muted {
        opacity: 0.9;
    }
</style>
