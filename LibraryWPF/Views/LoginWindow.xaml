<Window x:Class="LibraryWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryWPF.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Login" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtUsername"/>

            <TextBlock Text="Hasło" Margin="0,10,0,5"/>
            <PasswordBox x:Name="TxtPassword"/>

            <Button Content="Zaloguj" Click="BtnLogin_Click" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
